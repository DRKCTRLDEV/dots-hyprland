# Allow members of wheel or sudo group to run sddm-theme-helper for specific commands without password
Cmnd_Alias SDDM_THEME_HELPER = /usr/local/bin/sddm-theme-helper update-all *, /usr/local/bin/sddm-theme-helper set-colors, /usr/local/bin/sddm-theme-helper set-wallpaper *
%wheel ALL=(root) NOPASSWD: SDDM_THEME_HELPER
%sudo  ALL=(root) NOPASSWD: SDDM_THEME_HELPER
