polkit.addRule(function(action, subject) {
    if (action.id == "org.freedesktop.policykit.exec" && subject.isInGroup("wheel")) {
        var prog = action.lookup("program") || "";
        var cmd = action.lookup("command") || "";
        var argv = action.lookup("argv") || "";

        if (Array.isArray(argv)) {
            argv = argv.join(" ");
        }

        if (typeof prog !== "string") prog = String(prog);
        if (typeof cmd !== "string") cmd = String(cmd);
        if (typeof argv !== "string") argv = String(argv);

        if (prog.indexOf("sddm-theme-helper") !== -1 ||
            cmd.indexOf("sddm-theme-helper") !== -1 ||
            argv.indexOf("sddm-theme-helper") !== -1) {
            return polkit.Result.YES;
        }
    }
});
